{{ 'section-custom-scrollabel-section.css' | asset_url | stylesheet_tag }}

{% style %}
    .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
        padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    .background-{{ section.id }} {
        background:{{ section.settings.background_gradiant }}
    }

    @media screen and (min-width: 750px) {
        .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

<div class="scrollabel-wrapper padding-{{ section.id }} background-{{ section.id }}">
  <div class="scrollabel-container">
    <div class="scrollabel-text">
      {% for i in (1..5) %}
        <div class="div">
        {{ section.settings.svg1 }}
      </div>
      <div class="div">
        {{ section.settings.text1 }}
      </div>
      <div class="div">
        <a href="{{ section.settings.button_link1 }}">
          {{ section.settings.button_label1 }}
        </a>
      </div>
    </div>
    <div class="scrollabel-text">
      <div class="div">
        {{ section.settings.svg2 }}
      </div>
      <div class="div">
        {{ section.settings.text2 }}
      </div>
      <div class="div">
        <a href="{{ section.settings.button_link2 }}">
          {{ section.settings.button_label2 }}
        </a>
      </div>
    </div>
    <div class="scrollabel-text">
      <div class="div">
        {{ section.settings.svg3 }}
      </div>
      <div class="div">
        {{ section.settings.text3 }}
      </div>
      <div class="div">
        <a href="{{ section.settings.button_link3 }}">
          {{ section.settings.button_label3 }}
        </a>
      </div>        
      {% endfor %}
    </div>
  </div>
</div>

