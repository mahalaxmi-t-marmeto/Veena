{% style %}
    .padding-{{ section.id }} 
    {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media screen and (min-width: 750px) 
    {
        .padding-{{ section.id }} 
        {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

<div class="div">
    <div class="page-width">
        
    </div>
</div>

{% schema %}
{
    "name": "Hero Banner Slider",
    "tag":"section",
    "settings":[
        {
            "type": "header",
            "content":"Slider Settings"
        }
    ],
    "blocks": [
        {
            "name": "Slider",
            "type": "slider",
            "settings": [
            {
                "type": "header",
                "content":"Banner Settings"
            },
            {
                "type": "image_picker",
                "id": "desktop_image",
                "label": "Desktop Image",
                "info": "1440 x 600"
            },
            {
                "type": "image_picker",
                "id":"mobile_image",
                "label": "Mobile Image",
                "info":"400 x 600"
            },
            {
                "type": "text",
                "id":"pre_heading",
                "label": "Pre heading",
                "default": "Women's Apparel"
            },
            {
                "type": "text",
                "id":"heading",
                "label": "Heading",
                "default": "Elevate your wardrobe with our limited-time fashion offer!"
            },
            {
                "type": "text",
                "id":"button_text",
                "label": "Button Text",
                "default": "Button"
            },
            {
                "type": "url",
                "id":"button_url",
                "label":"Button URL"
            },
            {
            "type": "header",
            "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding top",
                "default": 30
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding bottom",
                "default": 30
            },
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "colors label",
                "info": "applies color schema to whole section",
                "default": "scheme-1"
            }
            ]
        }
    ] ,
    "presets": [
        {
            "name": "Slider"
        }
    ]   
}
{% endschema %}