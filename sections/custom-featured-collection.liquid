{{ 'section-custom-featured-collection.css' | asset_url | stylesheet_tag }}

{% style %}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media screen and (min-width: 750px) {
      .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }
{% endstyle %}



<div class="collection-wrapper padding-{{ section.id }}">
  <div class="page-width">
    <div class="collection-container">
      <div class="collection-container__title">
        <div class="h0">
          {{ section.settings.heading }}
        </div>
      </div>
      <div class="grid grid--4-col-desktop grid--2-col-tablet grid--2-col">
        {% for product in section.settings.product_list %}
          <div class="grid__item">
            {% render 'product-card', product: product, section_id: section.id %}
          </div>
         {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "My Featured Collection",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content":"Featured Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
      {
        "value": "h2",
        "label": "Large"
      },
      {
        "value": "h1",
        "label": "Medium"
      },
      {
        "value": "h0",
        "label": "Small"
      }
      ],
        "default": "h1",
        "label": "Heading Size"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "button_link"
    },
    {
        "type": "product_list",
        "id": "product_list",
        "label": "Products",
        "limit": 8
    },
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": " Color Schema",
        "info": "applies color schema to whole section",
        "default": "scheme-1"
    },
    {
        "type": "header",
        "content": "Section padding"
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 30
    },
    {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 30
    }
  ],
  "presets": [
    {
      "name": "My Featured Collection"
    }
  ]
}
{% endschema %}