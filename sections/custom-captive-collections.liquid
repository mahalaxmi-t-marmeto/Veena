{{ 'section-custom-captive-collections.css' | asset_url | stylesheet_tag }}
<script src="{{'custom-slider.js'| asset_url}}" defer></script>

{% style %}
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media screen and (min-width: 750px) {
        .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

{% capture CaptiveSlide %}
  {
      "autoplay": {{ section.settings.autoplay }},
      "arrows": {{ section.settings.arrows }},
      "pagination": {{ section.settings.pagination }},
      "perPage": {{ section.settings.perPage }},
      "breakpoints":{
        "640": {
			"perPage": 2
      }
      },
      "speed": {{ section.settings.speed |  append: '000'}},
      "type": "{{ section.settings.slider_type }}",
      "interval":{{ section.settings.interval | append :'000' }},
      "rewind":{{ section.settings.rewind }},
      "gap":"{{ section.settings.gap |  append: 'rem'}}"
  }
{% endcapture %}


<div class="captive-container padding-{{ section.id }}">
  <div class="page-width">
    <custom-slider class="color-{{ section.settings.color_scheme  }}" data-slider-options='{{ CaptiveSlide }}'>
      <div class="splide">
        <div class="splide__track">
          <ul class="splide__list">
            {% for collection in section.settings.collection_list %}
              <li class="splide__slide">
                  <div class="captive-container__image">
                  {% render 'responsive-picture', desktopImage: collection.featured_image%}
                  </div>
                  <div class="captive-container__content">
                    <div class="h2 captive-container__content-title">
                      <a href="{{ collection.url }}"> {{ collection.title }} </a>
                    </div>
                    <div class="captive-container__button button button--tertiary">
                      <a class="h3" href="{{ collection.url }}"> {{ section.settings.button_label }} </a>
                    </div>
                  </div>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </custom-slider>
  </div>
</div>

{% schema %}
{
  "name": "Captive Collections",
  "tag":"section",
  "settings": [
    {
      "type":"header",
      "content":"Collection"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Heading",
      "default":"Captivating Collections"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
        "value": "h2",
        "label": "Large"
        },
        {
        "value": "h1",
        "label": "Medium"
        },
        {
        "value": "h0",
        "label": "Small"
        }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 8
    },
    {
      "type": "header",
      "content":"Slider Settings"
    },
    {
      "type": "select",
      "id": "slider_type",
      "label": "Slider Type",
      "options": [
          {
          "value": "loop",
          "label": "Loop"
          },
          {
          "value": "slide",
          "label": "Slide"
          },
          {
          "value": "fade",
          "label": "Fade"
          }
      ],
        "default": "loop"
    },
    {
      "type": "range",
      "id": "perPage",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Per Page",
      "default": 1
    },
    {
      "type": "range",
      "id": "speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Speed of slide",
      "default": 1
    },
    {
      "type": "range",
      "id": "interval",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Slider timing",
      "default": 1
    },
    {
      "type": "range",
      "id": "gap",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Gap between slides in rem",
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "label": "Enable Arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Show Dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "rewind",
      "label": "Rewind Slider",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": " Color Schema",
      "info": "applies color schema to whole section",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 30
    }
    ],
    "presets":[
      {
        "name": "Captive Collections"
      }
    ]
}
{% endschema %}