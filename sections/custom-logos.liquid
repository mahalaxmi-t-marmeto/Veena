{{ 'section-custom-logos.css' | asset_url | stylesheet_tag }}

{% style %}
    .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
        padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    .background-{{ section.id }} {
        Background-color:{{ section.settings.background_color }}
    }

    @media screen and (min-width: 750px) {
        .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{% endstyle %}

{% capture LogoSlide %}
  {
      "autoplay": {{ section.settings.autoplay }},
      "arrows": {{ section.settings.arrows }},
      "pagination": {{ section.settings.pagination }},
      "perPage": {{ section.settings.perPage }},
      "breakpoints":{
        "640": {
			"perPage": {{ section.settings.perPage }}
      }
      },
      "perMove":1,
      "speed": {{ section.settings.speed |  append: '000'}},
      "type": "{{ section.settings.slider_type }}",
      "interval":{{ section.settings.interval | append :'000' }},
      "rewind":{{ section.settings.rewind }}
  }
{% endcapture %}

<div class="brands-wrapper padding-{{ section.id }}">
  <div class="background-{{ section.id }}">
    <div class="brands-container">
      <div class="brands-container__grid">
        {% for block in section.blocks %}
        <div class="brands-container__logos">
          {% render 'responsive-picture', desktopImage: block.settings.logo_image %}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<div class="brand-wrapper-slider padding-{{ section.id }} background-{{ section.id }}">
  <div class="">
    <custom-slider class="brand-container" data-slider-options='{{ LogoSlide }}'>
    <div class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <div class="brand-container__logos">
                {% render 'responsive-picture', desktopImage: block.settings.logo_image %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    </custom-slider>
  </div>
</div>



{% schema %}
{
  "name": "Brand logos",
  "tag":"section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content":"Brands"
    },
    {
      "type": "header",
      "content":"Slider Settings"
    },
    {
      "type": "select",
      "id": "slider_type",
      "label": "Slider Type",
      "options": [
          {
          "value": "loop",
          "label": "Loop"
          },
          {
          "value": "slide",
          "label": "Slide"
          },
          {
          "value": "fade",
          "label": "Fade"
          }
      ],
        "default": "loop"
    },
    {
      "type": "range",
      "id": "perPage",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Per Page",
      "default": 3
    },
    {
      "type": "range",
      "id": "speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Transition Speed of Slide",
      "default": 1
    },
    {
      "type": "range",
      "id": "interval",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Slider Autoplay Interval in seconds",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "label": "Enable Arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Show Dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "rewind",
      "label": "Rewind Slider",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F5F5F5"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 30
    }
    ],
    "blocks": [
      {
        "type": "Slider",
        "name":"Brand Logo Slider",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo_image",
            "label": "Brand Logo Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brand logos"
      }
    ]
}
{% endschema %}